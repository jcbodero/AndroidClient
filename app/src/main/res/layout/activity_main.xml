<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="547dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Direccion Ip"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtDirip"
            android:layout_width="544dp"
            android:layout_height="60dp"
            android:contentDescription="Direccion IP"
            android:text="192.168.1.9"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="548dp"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEscaner"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="287dp"
                android:layout_height="54dp"
                android:onClick="iniciarVentanaQR"
                android:text="Iniciar Escaner"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.134" />

            <Button
                android:id="@+id/Actualizar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="252dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:onClick="ActualizarInventario"
                android:text="Obtener Datos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.134" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO EQUIPO"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtEquipo"
            android:layout_width="545dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="179dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO CPU"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtCpu"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="179dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO PANTALLA"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPantalla"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="271dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO MOUSE"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtMouse"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="480dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO TECLADO"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtTeclado"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="375dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO REGULADOR"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtRegulador"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="595dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="INVENTARIO PARLANTE"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtParlante"
            android:layout_width="544dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="695dp" />

    </LinearLayout>

</RelativeLayout>